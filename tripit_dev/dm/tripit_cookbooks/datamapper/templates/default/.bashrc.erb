# Shortcuts for convenience
export DMHOME="/home/vagrant/code/dm"
export MAPHOME="$DMHOME/src/etc/datamap"
export M=$MAPHOME
export MI="$M/include"
export MH="$M/text/html"
export MP="$M/text/plain"
export MF="$M/text/pdf"
export MS="$M/text/msword"
export MR="$M/text/rtf"

# Some scripts depend on this.
export DATAMAPPER_DIR=$DMHOME

# Give our custom executables and libraries precedence in the search path.
export PYTHONPATH=$DMHOME/src/lib:$DMHOME/test/lib:$PYTHONPATH

. /home/vagrant/env/dm/bin/activate

export PATH=$PATH:~/code/dev_tools/dm/bin
